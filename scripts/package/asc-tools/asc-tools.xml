<?xml version="1.0" encoding="UTF-8"?>
<config name="asc-tools" copy_type="delivery" src_path="" dst_path="asc-tools" install_type="all" install_mod="550" install_own="$username:$usergroup">
    <package_info>
        <product_name>cann</product_name>
        <func_name>asc-tools</func_name>
        <suffix>run</suffix>
        <install_script>share/info/asc-tools/script/install.sh</install_script>
        <help>share/info/asc-tools/script/help.info</help>
        <version>package/asc-tools/version.xml</version>
        <cleanup>share/info/asc-tools/script/cleanup.sh</cleanup>
        <parallel>true</parallel>
    </package_info>

    <dir_info value="asc_tools_version" install_mod="550">
        <path value="compiler" install_mod="750"/>
        <path value="compiler/conf" install_mod="750"/>
        <path value="share"/>
        <path value="share/info" install_mod="750"/>
        <path value="share/info/asc-tools" install_mod="750"/>
        <path value="$(TARGET_ENV)/include/version"/>
        <path value="$(TARGET_ENV)/conf"/>
    </dir_info>

    <generate_info value="scene.info" dst_path="share/info/asc-tools" install_path="share/info/asc-tools" install_mod="440">
        <os>$(OS_NAME)</os>
        <os_version>$(OS_VER)</os_version>
        <arch>$(ARCH)</arch>
    </generate_info>

    <block_info dependtree="false" dst_path="asc-tools" block_conf_path="ascend">
        <block name="EngineeringCommon"/>
        <block name="EngineeringFiles"/>
        <block name="ToolsCommon"/>
    </block_info>

    <version_info install="true" install_path="asc-tools" install_own="$username:$usergroup" install_mod="750"/>
    <file_info value="asc_tools_script" copy_type="source" src_path="" dst_path="share/info/asc-tools" install_path="share/info/asc-tools">
        <file value="script" entity="true"/>
        <file value="version.info"/>
    </file_info>
    <file_info value="conf" copy_type="source" src_path="" dst_path="conf" install_path="$(TARGET_ENV)/conf" install_type="devel" install_mod="440">
        <file value="compile_options_config.json" install_softlink="compiler/conf/compile_options_config.json"/>
    </file_info>

    <block_info dependtree="false" dst_path="" install_path="" block_conf_path="ascend" install_mod="550">
        <block name="TIKCppSim"/>
        <block name="CASimuRuntime"/>
        <block name="AscendCToolkits" feature="ascendc"/>
    </block_info>
</config>
